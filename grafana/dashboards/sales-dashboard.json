{
  "uid": "sales-dashboard",
  "title": "Sales Ingestion",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "time": { "from": "now-5m", "to": "now" },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Sales / sec",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "rate(sales_events_total[1m])",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Revenue / sec",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "rate(sales_revenue_total[1m])",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Ingest Latency (p95)",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(sales_ingest_latency_seconds_bucket[1m])) by (le))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Items Sold / sec",
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "rate(sales_items_total[1m])",
          "refId": "A"
        }
      ]
    }
  ]
}
